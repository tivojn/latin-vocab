{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "server.js" 
    },
    { 
      "src": "/api-test", 
      "dest": "public/api-test.html" 
    },
    { 
      "src": "/debug-paths", 
      "dest": "public/debug-paths.html" 
    },
    { 
      "src": "/favicon.ico", 
      "dest": "public/favicon.ico" 
    },
    { 
      "src": "/manifest.json", 
      "dest": "public/manifest.json" 
    },
    { 
      "src": "/styles.css", 
      "dest": "public/styles.css" 
    },
    { 
      "src": "/app.js", 
      "dest": "public/app.js" 
    },
    { 
      "src": "/debug.html", 
      "dest": "public/debug.html" 
    },
    { 
      "src": "/robots.txt", 
      "dest": "public/robots.txt" 
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "VERCEL": "true"
  }
}